Format 66
Input stdclass.inc
Input numarticle.inc

# Input general definitions
Input article.layout

AddToPreamble
\usepackage{etoolbox}
\usepackage[style=english]{csquotes}
%%% Optional Math Operation: Makes bold greek letters more bold
\usepackage{upgreek}   %Needed for Matrix Greek Letters
\usepackage{pdfrender} %Needed for Matrix Greek Letters
\newcommand*{\boldgreek}[1]{%
	\textpdfrender{%
		TextRenderingMode=FillStroke,%
		LineWidth=.35pt,%
	}{#1}%
}
EndPreamble


NoStyle Part
NoStyle Subsubsection
NoStyle Part*
NoStyle Section*
NoStyle Subsection*
NoStyle Abstract


Style Section
	Font
	  Size                Large
	EndFont
End

Style Subsection
	Font
	  Shape               Italic
	EndFont
End

Style Subsubsection*
	Font
	  Size                Large
	  Shape               Italic
	EndFont
End



Style TitleEQ
	Margin                Static
	LatexType             Command
	Category              FrontMatter
	InTitle               1
	LatexName             title
	ParSkip               0.4
	ItemSep               0
	TopSep                0
	BottomSep             0.5
	ParSep                1
	Align                 Center
	LabelType             No_Label
	Font
	  Size                Larger
	  Series              Bold
	EndFont
	HTMLTag               h1
	HTMLTitle             true
End

InsetLayout Flex:AuthorNameEQ
	LyXType               Custom
	LabelString           "AuthorName"
	LatexType             Command
	LatexName             authorname
	MultiPar              0
	Argument 1
	  Mandatory 1
	  LabelString "Number"
	  Font
	    Size                normal
	    Series              Bold
	  EndFont
	EndArgument
	Argument 2
      Mandatory 1
      LabelString "Name-Surname"
	  Font
	    Size                normal
	    Series              Bold
	  EndFont
	EndArgument
	InTitle               1
End

InsetLayout Flex:AffiliationEQ
	LyXType               Custom
	LabelString           "Affiliation"
	LatexType             Command
	LatexName             affils
	MultiPar              0
	Argument 1
	  Mandatory 1
	  LabelString "Number"
	  Font
	    Size                normal
	    Series              Bold
	  EndFont
	EndArgument
	Argument 2
      Mandatory 1
      LabelString "Affiliation"
	  Font
	    Size                normal
	    Shape               Italic
	  EndFont
	EndArgument
	InTitle               1
End

InsetLayout Flex:EmailEQ
	LyXType               Custom
	LabelString           "E-mail"
	LatexType             Command
	LatexName             email
	MultiPar              0
	InTitle               1
	Font
	  Size                normal
	  Shape               Italic
	EndFont
	Argument 1
      Mandatory 1
      LabelString "Email: "
	  Font
	    Size                normal
	    Shape               Italic
	  EndFont
	  LabelFont
	    Size                normal
	    Shape               Italic
	  EndFont  
	EndArgument
End



#% Do not delete the line below; configure depends on this      
#  \DeclareLaTeXClass[eqconf, article]{Earthquake Engineering Conference}
#  \DeclareCategory{Articles}

Format 66
Input stdclass.inc
Input numarticle.inc

# Input general definitions
Input article.layout

Style OzetEQ
	Margin                Static
	Category              FrontMatter
	LabelString           "ÖZET:"
	LabelType             Above
	LatexType             Environment
	LatexName             ozet
	NeedProtect           0
	NextNoIndent          0
	ToggleIndent          Never
	ParSkip               0.5
	TopSep                0.25
	BottomSep             0.5
	ParSep                0.5
	Align                 Block
	LabelFont
	  Series              Bold
	  Size                large
	  Color               blue
	EndFont
	HTMLTag               h1
End

